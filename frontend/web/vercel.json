{
	"version": 2,
	"builds": [
		{ "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
	],
	"framework": null,
	"buildCommand": "npm ci && npm run build",
	"outputDirectory": "dist",
	"env": {
		"VITE_API_BASE": "https://your-backend.onrender.com"
	},
	"routes": [
		{ "handle": "filesystem" },
		{ "src": "/.*", "dest": "/index.html" }
	]
}
